<div class="col-md-12">
  <div class="container">
<div class="col-md-10 col-md-offset-1">
  <!-- <div class="container"> -->

<!-- <div class="row"> -->
  <div class="col-md-7">
    <h2><%= t("order_info") %></h2>
    <table class="table table-boldered">
      <thead>
        <tr>
          <th><%= t("product") %></th>
          <th><%= t("price") %></th>
          <th><%= t("quantity") %></th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td>
            <%= product_list.product_name %>
          </td>
          <td>
            <%= product_list.product_price %>
          </td>
          <td>
            <%= product_list.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right">
        <%= t("total") %> <%= @order.total %> CNY
      </span>
    </div>
  <!-- </div> -->



  <!-- <div class="col-md-7"> -->
    <hr/>
    <h2><%= t("ship_info") %></h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            <%= t("billing") %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t("shipping") %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-3 col-md-offset-2">
    <div class="panel panel-default cuspanel text-center">
      <div class="panel-heading cuspanel-head">
        <h3 class="panel-title"><%= t("pay") %></h3>
      </div>
      <div class="panel-body">
        <% if !@order.is_paid? && !@order.order_cancelled? %>
        <div class="group">
          <%= link_to(t("pay_alipay"), pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-info cus-pal-buts") %>
          <%= link_to(t("pay_wechat"), pay_with_wechat_order_path(@order.token), method: :post, class: "btn btn-success cus-pal-buts") %>
        </div>
        <% elsif @order.order_cancelled? %>
        <p class="order-note2"><%= t("cancelled") %></p>
        <% else %>
        <p class="order-note1"><%= t("paid") %></p>
        <% end %>
      </div>
    </div>
    <% if @order.order_placed? || @order.paid? %>
    <div class="panel panel-default text-center">
      <div class="panel-heading cuspanel-head">
        <h3 class="panel-title"><%= t("others") %></h3>
      </div>
      <div class="panel-body">
          <%= link_to(t("cancel"), apply_to_cancel_order_path(@order), method: :post, class: "btn btn-primary cus-pal-but") %>
      </div>
    </div>
    <% end %>
  </div>

<!-- </div> -->

<!-- </div> -->
</div>
</div>
</div>
