<div class="row">
  <div class="col-md-12">
    <h2><%= t("shopping_list") %></h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"><%= t("product") %></th>
          <th><%= t("price") %></th>
          <th><%= t("quantity") %></th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
              <% if cart_item.product.photos[0].present? %>
                <%= image_tag(cart_item.product.photos[0].avatar.small.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        <%= t("total") %> <%= render_cart_total_price(current_cart) %> CNY
      </span>
    </div>

    <hr />

    <h2><%= t("order_detail") %></h2>
    <div class="order-form">
      <%= simple_form_for @order do |f| %>
      <legend><%= t("billing") %></legend>
      <div class="form-group col-lg-6">
        <%= f.input :billing_name %>
      </div>
      <div class="form-group col-lg-6">
        <%= f.input :billing_address %>
      </div>
      <legend><%= t("shipping") %></legend>
      <div class="form-group col-lg-6">
        <%= f.input :shipping_name %>
      </div>
      <div class="form-group col-lg-6">
        <%= f.input :shipping_address %>
      </div>
      <div class="checkout">
        <%= f.submit t("confirm_order"), class: "btn btn-lg btn-danger pull-right", data: {disable_with:"Submitting..."} %>
      </div>
      <% end %>
    </div>
  </div>
</div>
