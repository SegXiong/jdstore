<div class="row">
  <div class="col-md-12">
    <%= link_to clean_carts_path, method: :delete, class: "pull-right", style: "text-decoration: underline;", data: {confirm: "你确定要清空整个购物车吗？"} do %>
      <%= t("empty_cart") %>
    <% end %>

    <h2><%= t("cart") %></h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"><%= t("product") %></th>
          <th><%= t("price") %></th>
          <th><%= t("quantity") %></th>
          <th><%= t("option") %></th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to product_path(cart_item.product) do %>
              <% if cart_item.product.photos[0].present? %>
                <%= image_tag(cart_item.product.photos[0].avatar.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%#= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
              <%#= f.select :quantity, 1..cart_item.product.quantity %>
              <%#= f.submit t("update"), data: {disable_with: "Submitting"} %>
            <%# end %>

            <%= link_to("-", minus_cart_item_path(cart_item.product_id), method: :post, :class => "btn btn-sm btn-default") %>
            <%= cart_item.quantity %>
            <%= link_to("+", add_cart_item_path(cart_item.product_id), method: :post, :class => "btn btn-sm btn-default") %>

          </td>
          <td>
            <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br />

    <div class="total clearfix">
      <span class="pull-right">
        <span>
          <%= t("total") %> <%= render_cart_total_price(current_cart) %> CNY
        </span>
      </span>
    </div>

    <hr >

    <div class="checkout clearfix">
      <%= link_to(t("checkout"), checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
