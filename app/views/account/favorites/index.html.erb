<div class="product-box">
  <div class="container">
    <div class="col-md-8 col-md-offset-2">
      <h2><%= t("account.favorites") %></h2>
        <hr />
        <% if @products.present? %>
        <% @products.each do |product| %>
        <div class="row">
          <div class="col-md-3">
            <%= link_to product_path(product) do %>
              <% if product.photos[0].present? %>
                <%= image_tag(product.photos[0].avatar.small.url) %>
              <% else %>
                <%= image_tag("http://placehold.it/100x100&text=No Pic") %>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-3 cuscart">
            <div class="cart-caption"><%= link_to(product.title, product_path(product)) %></div>
          </div>
          <div class="col-md-3 cuscart">
            ï¿¥ <%= product.price %>
          </div>
          <div class="col-md-3 cuscart">
            <div class="cart-caption-d">
              <%= link_to(content_tag(:i, t("account.remove"), class: "fa fa-trash"), remove_account_favorite_path(product), method: :post) %>
            </div>
          </div>
        </div>
        <hr />
        <% end %>
        <% else %>
        <div class="text-center fav-index">
          <h4><i class="fa fa-times-circle fa-lg" aria-hidden="true"></i> <%= t("no-fav") %></h4>
          <div>
            <%= link_to(t("back"), products_path, :class => "btn btn-lg btn-default") %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
