<h2><%= t("account.favorites") %></h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2"><%= t("product") %></th>
      <th><%= t("price") %></th>
      <th><%= t("account.options") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to product_path(product) do %>
          <% if product.photos[0].present? %>
            <%= image_tag(product.photos[0].avatar.small.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to(product.title, product_path(product)) %></td>
      <td><%= product.price %></td>
      <td><%= link_to(content_tag(:i, t("account.remove"), class: "fa fa-trash"), remove_account_favorite_path(product), method: :post) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
