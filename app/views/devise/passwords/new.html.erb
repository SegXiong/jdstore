<div class="row login-bg" id="forgot-modal" role="dialog">
    <div class="modal-dialog">
        <div class="loginmodal-container">
            <div class="modal-header">
                <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                <h2 class="text-center"><%= t("forget") %></h2>
            </div>
            <div class="modal-body">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                                                :html => {:id => "forgot_password_user"},
                                                :format => :json,
                                                :remote => true ) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="input-group">
                      <span class="input-group-addon">
                        <span class="glyphicon glyphicon-envelope"></span>
                      </span>
                      <%= f.email_field :email, autofocus: true, required:true, class: "form-control", placeholder:"Email" %>
                    </div>

                  <div class="form-actions">
                    <br>
                    <%= f.submit t("send"), class: 'btn btn-success' %>
                  </div>
                <% end %>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-small" data-toggle="modal" data-target="#login-modal" data-dismiss='modal'><%= t("log_in") %></button>
                <div class="links pull-right">
                  <button class="btn btn-primary btn-small" data-toggle="modal" data-target="#signup-modal" data-dismiss='modal'><%= t("sign_up") %></button>
                </div>
            </div>
        </div>
    </div>
</div>
