<!DOCTYPE html>
<html>
<head>
  <title>JDStore 后台</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid" style="margin-bottom: 100px;">
    <div class="row">
      <%= render "common/navbar" %>
    </div>
    <div class="border cusborder"></div>
    <div class="container">
    <div class="col-md-2">
      <ul class="nav nav-pills nav-stacked" style="max-width: 300px; margin-top: 100px;">
        <li class="manage-menu"><%= t("admin.manage-menu") %></li>
        <li class="active"><%= link_to admin_products_path do %>
          <%= t("admin.products") %>
          <% end %>
        </li>
        <li class="active"><%= link_to admin_orders_path do %>
          <%= t("admin.orders") %>
          <% end %>
        </li>
        <li class="active"> <%= link_to(t("admin.categories"), admin_categories_path) %> </li>
      </ul>
    </div>
    <div class="col-md-10">
      <%= yield %>
    </div>
    </div>

    </div>
    <div class="row"></div>
    <%= render "common/footer" %>
</body>
</html>
