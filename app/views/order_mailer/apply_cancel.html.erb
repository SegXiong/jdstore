<div class="row">
  <div class="col-md-12">
    <h2>
      <%= t("order_info") %> <br />
      <small>
        <%= link_to(t("link"), order_url(@order.token)) %>
      </small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%"><%= t("product") %></th>
          <th><%= t("price") %></th>
          <th><%= t("quantity") %></th>
          <th><%= t("sum") %></th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
              <%= product_list.quantity %>
            </td>
            <td>
              <%= product_list.quantity * product_list.product_price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total group clearfix">
      <h4 class="pull-right">
        <%= t("total") %> <%= @order.total %> CNY
      </h4>
    </div>
    <hr />
    <h2><%= t("ship_info") %></h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><%= t("billing") %></td>
        </tr>
        <tr>
          <td><%= @order.billing_name %> - <%= @order.billing_address %></td>
        </tr>
        <tr>
          <td><%= t("shipping") %></td>
        </tr>
        <tr>
          <td><%= @order.shipping_name %> - <%= @order.shipping_address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
