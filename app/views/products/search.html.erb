<div class="product-box">
  <div class="container">
    <div class="col-md-10 col-md-offset-1">
    <% if @query_string.blank? %>
      <div class="text-center search-info-error">
        <h4><i class="fa fa-times-circle fa-lg" aria-hidden="true"></i> <%= t("blank") %></h4>
        <div>
          <%= link_to(t("back"), products_path, :class => "btn btn-lg btn-default") %>
        </div>
      </div>

    <% elsif @products.blank? %>
      <div class="text-center search-info-error">
        <h4><i class="fa fa-times-circle fa-lg" aria-hidden="true"></i> <%= t("no-result") %></h4>
        <div>
          <%= link_to(t("back"), products_path, :class => "btn btn-lg btn-default") %>
        </div>
      </div>

    <% else %>
      <h4 class="text-center" style="margin-bottom: 30px;"><%= t("result") %></h4>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xs-6 col-md-3 goods_content">
            <div class="thumbnail">
              <%= link_to product_path(product), style: "text-decoration: none" do %>
                <% if product.photos.present? %>
                  <%= image_tag(product.photos[0].avatar.thumb.url, class: "index-pic") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "index-pic") %>
                <% end %>
                <div class="caption text-center">
                  <h4><%= product.title %></h4>
                  <p>ï¿¥<%= product.price %></p>
                </div>
              <% end %>
              <% if product.quantity == 0 %>
                <div class="productList-item-sellout"><span class="sellout"><%= t("sellout") %></span></div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
</div>
