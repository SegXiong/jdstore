<div class="col-md-12">
  <div class="container">
<div class="col-md-10 col-md-offset-1">
  <!-- <div class="container"> -->
    <div class="row ads">
      <div id="carousel-custom3" class="carousel slide" data-ride="carousel">
		    <div class="carousel-inner">
          <div class="item active">
            <img src="images/carousel.jpg" alt="Ads">
          </div>
          <div class="item">
            <img src="images/carousel1.jpg" alt="Ads">
          </div>
          <div class="item">
            <img src="images/carousel2.jpg" alt="Ads">
          </div>
		    </div>

	      <ol class="carousel-indicators">
					<li data-target="#carousel-custom3" data-slide-to="0" class="active"></li>
    			<li data-target="#carousel-custom3" data-slide-to="1"></li>
          <li data-target="#carousel-custom3" data-slide-to="2"></li>
	    	</ol>
	    </div>
    </div>

    <div class="cusmenu">
      <div class="row">
        <div class="col-md-2" style="color: #ccc;">
          <%= t("order") %>:
        </div>
        <div class="col-md-6">
          <div class="col-md-2" id="menu-1"><%= link_to(t("newest"), products_path) %></div>
          <div class="col-md-2" id="menu-2"><%= link_to(t("pricing"), products_path(:order => "by_price")) %></div>
          <div class="col-md-2" id="menu-3"><%= link_to(t("popularities"), products_path(:order => "by_popularity")) %></div>
        </div>

      </div>
    </div>

    <div class="row goods">
      <% @products.each do |product| %>
        <div class="col-xs-6 col-md-3 goods_content">
          <div class="thumbnail">
            <%= link_to product_path(product), style: "text-decoration: none" do %>
              <% if product.photos.present? %>
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "index-pic") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "index-pic") %>
              <% end %>
              <div class="caption text-center">
                <h4><%= product.title %> </h4>
                <p>ï¿¥<%= product.price %></p>
              </div>
            <% end %>
            <% if product.quantity == 0 %>
              <div class="productList-item-sellout"><span class="sellout"><%= t("sellout") %></span></div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <!-- </div> -->
</div>
</div>
</div>
