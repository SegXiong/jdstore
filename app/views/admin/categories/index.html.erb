<div class="col-md-10 col-md-offset-1">
<h2><%= t("admin.categories") %></h2>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to(t("admin.new_category"), new_admin_category_path, class: "btn btn-primary") %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="20%">#</th>
      <th width="60%"><%= t("admin.category") %></th>
      <th width="20%"><%= t("admin.option") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= category.name %></td>
      <td>
        <%= link_to admin_category_path(category), method: :delete do %>
          <i class="fa fa-times x-color"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="page-box text-center">
  <%= will_paginate @categories, :previous_label => t("pre"), :next_label => t("next"), renderer: BootstrapPagination::Rails %>
</div>
