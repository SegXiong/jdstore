<div class="row">
  <div class="col-md-12">
    <h2><%= t("admin.order_detail") %> (<%= render_order_paid_state(@order) %>)</h2>
    <%= render "state_option", order: @order %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%"><%= t("admin.product") %></th>
          <th><%= t("admin.price") %></th>
          <th><%= t("admin.quantity") %></th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td>
            <%= product_list.product_name %>
          </td>
          <td>
            <%= product_list.product_price %>
          </td>
          <td>
            <%= product_list.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right">
        <%= t("total") %> <%= @order.total %> CNY
      </span>
    </div>
    <hr />
    <h2><%= t("admin.shipping_detail") %></h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            <%= t("admin.billing") %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t("admin.shipping") %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
