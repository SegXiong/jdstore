<div style="padding: 10px; float: right;">
  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to cancel_admin_order_path(order), class: "btn btn-warning btn-sm", method: :post do %>
      <%= t("admin.cancel") %>
    <% end %>
  <% when "paid" %>
    <%= link_to cancel_admin_order_path(order), class: "btn btn-warning btn-sm", method: :post do %>
      <%= t("admin.cancel") %>
    <% end %>
    <%= link_to ship_admin_order_path(order), class: "btn btn-primary btn-sm", method: :post do %>
      <%= t("admin.shipping") %>
    <% end %>
  <% when "shipping" %>
    <%= link_to shipped_admin_order_path(order), class: "btn btn-success btn-sm", method: :post do %>
      <%= t("admin.shipped") %>
    <% end %>
  <% when "shipped" %>
    <%= link_to return_admin_order_path(order), class: "btn btn-danger btn-sm", method: :post do %>
      <%= t("admin.return") %>
    <% end %>
  <% when "order_cancelled" %>
    <span class="label label-default"><%= t("admin.cancelled") %></span>
  <% when "good_returned" %>
    <span class="label label-default"><%= t("admin.returned") %></span>
  <% end %>
</div>
