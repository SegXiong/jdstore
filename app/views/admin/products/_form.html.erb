<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :friendly_id %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <% if @product.photos.present? %>
    <span>目前商品图</span> <br />
    <% @product.photos.each do |photo| %>
      <%= image_tag(photo.avatar.thumb.url) %>
    <% end %>
  <% end %>
  <div class="group">
    <#%= f.input :image, as: :file %>
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :miltiple => true, name: "photos[avatar][]" %>
  </div>
  <%= f.submit "Submit", data: {disable_with: "Submitting..."} %>
<% end %>
