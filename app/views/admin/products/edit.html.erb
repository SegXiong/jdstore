<h2>Edit Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :friendly_id %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <div class="group">
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] }, {}, :class => "form-control" %>
  </div>
  <% if @product.photos.present? %>
    <span>目前商品图</span> <br />
    <% @product.photos.each do |photo| %>
      <%= image_tag(photo.avatar.thumb.url) %>
    <% end %>
  <% end %>
  <div class="group">
    <%#= f.input :image, as: :file %>
    <%#= f.label :avatar %>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  </div>
  <br />
  <div class="group">
    <%= f.submit "Submit", data: {disable_with: "Submitting..."} %>
  </div>
<% end %>

<script>
  $("#product_category_id").select2( { theme: "bootstrap"} );
</script>
